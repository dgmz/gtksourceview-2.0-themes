<style-scheme id="pomaii-var" _name="Poma ][ (variant)" version="1.0">
  <author>Daniel Guerrero</author>
  <_description>A green blast from the past (variant)</_description>

  <!-- Colors -->
  <color name="dark"        value="#23574B"/>
  <color name="mid_dark"    value="#388972"/>
  <color name="mid_light"   value="#59B99E"/>
  <color name="light"       value="#61F4C8"/>

  <!-- Global Settings -->

  <style name="text"                        foreground="mid_light" background="dark"/>
  <style name="selection"                   foreground="dark" background="mid_light"/>
  <style name="cursor"                      foreground="light"/>
  <style name="current-line"                background="dark"/>
  <style name="line-numbers"                foreground="mid_dark" background="dark"/>
  <style name="draw-spaces"                 foreground="light"/>
  
  <!-- Bracket Matching -->
  <style name="bracket-match"               background="mid_dark"/>
  <style name="bracket-mismatch"            background="mid_light" bold="false"/>
  
  <!-- Search Matching -->
  <style name="search-match"                foreground="light" background="mid_dark"/>

  <!-- Bookmarks FIXME -->
  <style name="bookmark"                    background="light"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="light" italic="true"/>
  <style name="def:shebang"                 foreground="light" italic="true"/>
  <style name="def:doc-comment-element"     bold="true"/>

  <!-- Constants and Variables-->
  <style name="def:constant"                foreground="light"/>
  <style name="def:string"                  foreground="light"/>
  <style name="def:special-char"            foreground="light"/>
  <style name="def:special-constant"        foreground="light" bold="true"/>
  <style name="def:number"                  foreground="light"/>
  <style name="def:floating-point"          foreground="light"/>
  <style name="def:keyword"                 foreground="light" bold="false"/>
  <style name="def:builtin"                 foreground="light" bold="false"/>
  <style name="def:variable"                foreground="light"/>
  
  <!-- Identifiers -->
  <style name="def:identifier"              foreground="mid_light"/>
  <style name="def:function"                use-style="def:identifier"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="mid_light"/>

  <!-- Types -->
  <style name="def:type"                    foreground="light" bold="false"/>
  
  <!-- Others -->
  <style name="def:error"                   foreground="light" background="dark" bold="true"/>
  <style name="def:note"                    foreground="light" bold="true"/>
  <style name="def:net-address-in-comment"  foreground="light" italic="false" underline="true"/>
  <style name="def:preprocessor"            foreground="light"/>
    
  <!-- Unknown? -->
  <style name="def:specials"                foreground="light" background="dark"/>
  <style name="def:boolean"                 foreground="light"/>

  <!-- C Styles -->
  <style name="c:preprocessor"              foreground="mid_light" bold="true"/>
  <style name="c:included-file"             foreground="mid_light"/>
  <style name="c:common-defines"            foreground="mid_light" bold="true"/>

  <!-- Diff Styles -->
  <style name="diff:ignore"                 foreground="light"/>
  <style name="diff:added-line"             foreground="light"/>
  <style name="diff:removed-line"           foreground="light"/>
  <style name="diff:changed-line"           foreground="light"/>
  <style name="diff:diff-file"              foreground="light" bold="true"/>
  <style name="diff:location"               foreground="light"/>
  <style name="diff:special-case"           foreground="light" bold="true"/>

  <!-- Ruby Styles -->
  <style name="ruby:module-handler"         foreground="mid_light"/>
  <style name="ruby:symbol"                 foreground="mid_light"/>
  <style name="ruby:regex"                  foreground="mid_light"/>

  <!-- SH Styles -->
  <style name="sh:function"                 foreground="mid_light"/>
  
  <!-- XML Styles -->
  <style name="xml:attribute-name"          foreground="mid_light"/>
  <style name="xml:element-name"            foreground="mid_light"/>
  <style name="xml:entity"                  foreground="mid_light"/>
  <style name="xml:processing-instruction"  bold="true"/>

</style-scheme>
